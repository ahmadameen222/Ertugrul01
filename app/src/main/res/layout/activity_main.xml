<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="20dp"
            android:text="ERTUGRUL"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:id="@+id/about_us_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/about_us_xml"
            android:gravity="center"
            android:padding="10dp"
            android:text="WHO ARE WE?"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/acme" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/life_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIFE"
            android:background="#cac45d5d"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"

            android:drawableTop="@drawable/ic_action_life"
            />

        <TextView
            android:id="@+id/wars_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARS"
            android:background="#cb57b3c1"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:drawableTop="@drawable/ic_action_wars"
            />

        <TextView
            android:id="@+id/empire_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPIRE"
            android:textColor="#000000"
            android:background="#d6ed8eff"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:drawableTop="@drawable/ic_action_empire"
            />

    </LinearLayout>


    <fragment
        android:id="@+id/main_fragment_area"
        android:name="com.alameen.dell.ertugrul01.life_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


