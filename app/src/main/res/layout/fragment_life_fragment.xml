<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".life_fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/convergence"
                android:text="EARLY LIFE:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                app:fontFamily="@font/convergence"
                android:text="@string/life_intro"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:src="@drawable/ertugrul1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                app:fontFamily="@font/convergence"
                android:text="@string/life_fam_det"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="6dp"
                app:fontFamily="@font/convergence"
                android:textStyle="bold"
                android:text="Who Were Oghuz Turks?"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/oghuz"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                app:fontFamily="@font/convergence"
                android:layout_gravity="left|right"
                android:text="@string/Oghuz_turks"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/oghuz1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                app:fontFamily="@font/convergence"
                android:text="for more: taryhturkmen.blogspot.com"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="6dp"
                app:fontFamily="@font/convergence"
                android:text="Who Were Kayis/Kayi Tribe:"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                app:fontFamily="@font/convergence"
                android:text="@string/Kayi_tribe"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/kayi"
                />

            <Button
                android:id="@+id/life_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/next_xml"
                android:text="NEXT"
                />

        </LinearLayout>

    </ScrollView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6081186777692750/2192090909">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
